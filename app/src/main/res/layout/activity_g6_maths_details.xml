<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".G6MathsDetails">

    <ImageView
        android:id="@+id/G6MathView"
        android:layout_width="180dp"
        android:layout_height="222dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.055"
        app:srcCompat="@drawable/grade6maths" />

    <TextView
        android:id="@+id/G6MathBookNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grade 6 Math Workbook"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/G6MathView"
        app:layout_constraintVertical_bias="0.033" />

    <TextView
        android:id="@+id/G6MathAuthorNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Chris McMUllen"
        android:textAlignment="center"
        android:textColor="#424242"
        android:textSize="15dp"

        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/G6MathBookNameView"
        app:layout_constraintVertical_bias="0.021" />

    <ScrollView
        android:id="@+id/G6MathsScroll1"
        android:layout_width="370dp"
        android:layout_height="360dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/G6MathAuthorNameView"
        tools:layout_editor_absoluteX="16dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>